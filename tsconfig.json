{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "types": ["vite/client", "vitest/globals", "react", "node"],
    "paths": {
      "test-utils": ["src/vitest/utils.tsx"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "compileOnSave": false,
  "exclude": ["node_modules"]
}
